<%- include("../partials/header") %>
<%- include("../partials/errorBox") %>
<form action="<%= formAction %>" method="POST" class="needs-validation" novalidate>
    <div class="mb-3">
      <label class="form-label">Nome</label>
      <input value="<%= modelo.nome %>" name="nome" type="text" class="form-control" required minlength="2">
      <div class="invalid-feedback">O nome do modelo deve ter 2 ou mais carateres</div>
    </div>
    <div class="mb-3">
        <label class="form-label">Marca</label>
        <select name="marca_id" class="form-control" required>
          <option value="">Selecione uma marca</option>
          <% for(let i = 0; i < marcas.length; i++){ %>
            <option <%= (modelo.marca_id == marcas[i].id)?'selected="selected"':'' %> value="<%= marcas[i].id %>"><%= marcas[i].nome %></option>
          <% } %>
        </select>
        <div class="invalid-feedback">A marca é obrigatória</div>
    </div>
    <button type="submit" class="btn btn-primary"><%= buttonMessage %></button>
  </form>
<%- include("../partials/footer") %>