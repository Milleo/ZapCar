<%- include("../partials/header") %>
<a class="btn btn-primary" href="/admin/lojas/cadastrar">Cadastrar</a>

<div class="table-responsive mt-3">
<table class="table table-striped table-sm">
    <thead>
    <tr>
        <th scope="col">Nome</th>
        <th scope="col">EndereÃ§o</th>
        <th scope="col"></th>
    </tr>
    </thead>
    <tbody>
        <% if(centros.length == 0){ %>
        <tr>
            <td colspan="4"><em>Nenhuma loja cadastrado</em></td>
        </tr>
        <% }else{ %>
            <% for(let i = 0; i < centros.length; i++){ %>
            <tr>
                <td><%= centros[i].nome %></td>
                <td><%= centros[i].endereco.logradouro %>, <%= centros[i].endereco.numero %><br />
                    <%= centros[i].endereco.bairro %>, <%= centros[i].endereco.cidade %> - <%= centros[i].endereco.estado %></td>
                <td>
                    <a class="btn btn-outline" href="/admin/lojas/alterar/<%= centros[i].id %>">Editar</a>
                    <a class="btn btn-outline" href="/admin/lojas/excluir/<%= centros[i].id %>">Excluir</a>
                </td>
            </tr>
        <% } %>
    <% } %>
    </tbody>
</table>
</div>
<%- include("../partials/footer") %>