<%- include("../partials/header") %>
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom"></div>
    <h1 class="h2">Veículos</h1>
    <a class="btn btn-primary" href="/admin/veiculos/cadastrar">Cadastrar</a>
</div>

<div class="table-responsive">
<table class="table table-striped table-sm">
    <thead>
    <tr>
        <th scope="col">Imagem</th>
        <th scope="col">Marca</th>
        <th scope="col">Ano</th>
        <th scope="col">Cor</th>
        <th scope="col">Placa</th>
        <th scope="col">Loja</th>
        <th scope="col"></th>
    </tr>
    </thead>
    <tbody>
        <% if(veiculos.length == 0){ %>
        <tr>
            <td colspan="4"><em>Nenhum veículo cadastrado</em></td>
        </tr>
        <% }else{ %>
            <% for(let i = 0; i < veiculos.length; i++){ %>
            <tr>
                <td><%= veiculos[i].nome %></td>
                <td><%= veiculos[i].email %></td>
                <td><%= (veiculos[i].ativo)?"Sim":"Não" %></td>
                <td>
                    <a class="btn btn-outline" href="/admin/veiculos/rastrear/<%= veiculos[i].id %>">Rastrear</a>
                    <a class="btn btn-outline" href="/admin/veiculos/alterar/<%= veiculos[i].id %>">Editar</a>
                    <a class="btn btn-outline" href="/admin/veiculos/excluir/<%= veiculos[i].id %>">Excluir</a>
                </td>
            </tr>
        <% } %>
    <% } %>
    </tbody>
</table>
</div>
<%- include("../partials/footer") %>